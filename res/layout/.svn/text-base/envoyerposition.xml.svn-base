<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical" >

<RelativeLayout
    android:id="@+id/linear1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/finish"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/close" />
    <TextView
    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Partager ma position"
    android:textSize="14dp"
    android:layout_marginTop="5dp"
    android:textColor="#F7F9F8"
   
    />

    </RelativeLayout>

         <TextView
             android:id="@+id/nompt"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/linear1"
             android:layout_marginTop="26dp"
             android:text="saisir le numero de votre destinataire"
             android:textColor="#ED6B15"
             android:textSize="18sp" />

         <AutoCompleteTextView
             android:id="@+id/autoCompleteTextView1"
             android:layout_width="300dp"
             android:layout_height="30dp"
             android:layout_below="@+id/nompt"
             android:layout_centerHorizontal="true"
             android:background="@android:color/white"
              >

             <requestFocus />
         </AutoCompleteTextView>

         <Button
             android:id="@+id/envoinetwork"
             android:layout_width="106dp"
             android:layout_height="62dp"
             android:layout_alignBaseline="@+id/envoisms"
             android:layout_alignBottom="@+id/envoisms"
             android:layout_alignRight="@+id/autoCompleteTextView1"
             android:layout_marginRight="21dp"
             android:background="@drawable/send_events" />

         <Button
             android:id="@+id/envoisms"
             android:layout_width="106dp"
             android:layout_height="62dp"
             android:layout_alignLeft="@+id/autoCompleteTextView1"
             android:layout_below="@+id/autoCompleteTextView1"
             android:layout_marginLeft="19dp"
             android:layout_marginTop="28dp"
             android:background="@drawable/send_msg_events" />
         
</RelativeLayout>