<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog"
   android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/bgdialog"
    android:orientation="vertical">

    

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:text="visualiser la position:"
            android:textColor="#6A1500"
            android:textSize="14sp" />

        <Button
            android:id="@+id/localiser"
            android:layout_width="129dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView1"
            android:layout_marginBottom="41dp"
            android:background="@drawable/localiser" />

        <Button
            android:id="@+id/itineraire"
            android:layout_width="129dp"
            android:layout_height="48dp"
            android:layout_alignBaseline="@+id/localiser"
            android:layout_alignBottom="@+id/localiser"
            android:layout_alignParentRight="true"
            android:background="@drawable/itineraire" />

        <Button
            android:id="@+id/annuler"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:background="@drawable/close" />


</RelativeLayout>