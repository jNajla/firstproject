        // valeurs statiques pour test
        final LatLng poi1 = new LatLng(35.570494, 10.820332);
        final LatLng poi2 = new LatLng(35.633581, 10.756962);
        final LatLng poi3 = new LatLng(35.681597, 10.728229);
